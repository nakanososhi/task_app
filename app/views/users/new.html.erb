<h3>スケジュール新規作成</h3>

<% if flash[:notice] %>
<p class="notice"><%= flash[:notice] %></p>
<% end %>


<%= render "shared/error" , obj: @user %>

 <%= form_with model: @user do |f| %>
        <table>
          <tr>
            <th><%= f.label :title ,"タイトル" %></th>
            <td><%= f.text_field :title %></td>
          </tr>

          <tr>
            <th><%= f.label :start ,"開始日" %></th>
            <td><%= f.date_field :start %></td>
          </tr>

          <tr>
            <th><%= f.label :stop ,"終了日" %></th>
            <td><%= f.date_field :stop %></td>
          </tr>

          <tr>
            <th><%= f.label :allday ,"終日" %></th>
            <td><%= f.check_box :allday %></td>
          </tr>

          <tr>
            <th><%= f.label :memo ,"スケジュールメモ" %></th>
            <td><%= f.text_area :memo %></td>
          </tr>
        </table>

    <div>
      <ul>
        <li><%= f.submit "登録完了する"%></li>
        <li><%= link_to "スケジュール一覧に戻る", :users %></li>
      </ul>
    </div>
  <% end %>
